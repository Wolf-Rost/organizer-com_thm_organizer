<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Layout: Eventlist">
		<message>
			<![CDATA[Das Standard-Layout zur Anzeige einer Liste von Events auch per Kategorie oder Raum.]]>
		</message>
	</layout>
	<state>
		<name>Standard Event/Event-Category Layout</name>
		<description>Das Standard-Layout zur Anzeige einer Liste von Events auch in Eventkategorien..</description>
		<params addpath="/components/com_thm_organizer/assets/elements">
			<param name="@spacer"
                               type="spacer"
                               default="&lt;strong&gt;Display Restrictions&lt;&#47;strong&gt;&lt;hr&#47;&gt;"
                               label="" description="" />
                        <param name="display_type" type="list" default="0" label="Display Type" description="Criteria for the display of events.">
				<option value="0">Current</option>
				<option value="1">Current/Category</option>
				<option value="2">Current/Room</option>
				<option value="3">Current/Own</option>
				<option value="4">All(Archive)</option>
				<option value="5">All/Category</option>
				<option value="6">All/Room</option>
				<option value="7">All/Own</option>
			</param>
                        <param name="category"
                               type="multilist"
                               viewtype="true"
                               sql="SELECT ecid, ecname FROM #__thm_organizer_categories;"
                               key_field="ecid"
                               value_field="ecname"
                               default=""
                               size = "5"
                               multiple="multiple"
                               label="Display Categories"
                               description="The categories to be displayed. Use the Ctrl key to select more than one item." />
                        <param name="room"
                               type="multilist"
                               viewtype="true"
                               sql="SELECT oid, oname FROM #__thm_organizer_objects WHERE otype = 'room' ORDER BY oname;"
                               key_field="oid"
                               value_field="oname"
                               default=""
                               size = "10"
                               multiple="multiple"
                               label="Display Rooms"
                               description="The categories to be displayed. Use the Ctrl key to select more than one item." />
                        <param name="@spacer"
                               type="spacer"
                               default="&lt;strong&gt;Column Functions&lt;&#47;strong&gt;&lt;hr&#47;&gt;"
                               label="" description="" />
			<param name="title_width" type="text" size="15" default="25" label="Title Column Width" description="The relative width of the title column. Values are percentages." />
                        <param name="show_author" type="radio" default="0" label="Display Author Column" description="Show/Hide the Author Column">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
                        <param name="author_width" type="text" size="15" default="0" label="Author Column Width" description="The relative width of the author column. Values are percentages." />
                        <param name="show_room" type="radio" default="1" label="Display Room Column" description="Show/Hide the Room Column">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
                        <param name="room_width" type="text" size="15" default="15" label="Room Column Width" description="The relative width of the room column. Values are percentages." />
                        <param name="show_category" type="radio" default="1" label="Display Category Column" description="Show/Hide the Category Column">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
                        <param name="category_width" type="text" size="15" default="15" label="Category Column Width" description="The relative width of the category column. Values are percentages." />
                        <param name="date_width" type="text" size="15" default="20" label="Date Column Width" description="The relative width of the date column. Values are percentages" />

			<param name="@spacer"
                               type="spacer"
                               default="&lt;strong&gt;Date Function(s)&lt;&#47;strong&gt;&lt;hr&#47;&gt;"
                               label="" description="" />
			<param name="date_format" type="text" size="15" default="Y-m-d" label="Date Format" description="The format of date values." />
                        <param name="time_format" type="text" size="15" default="H:i" label="Time Format" description="The format of time values." />
		</params>
	</state>
</metadata>
