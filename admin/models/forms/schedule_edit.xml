<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            id="id"
            name="id"
            type="text" />
        <field
            id="filename"
            name="filename"
            type="text"
            label="COM_THM_ORGANIZER_NAME"
            description="COM_THM_ORGANIZER_SCH_FILE_DESC"
            class="inputbox validate-filename"
            validate="title"
            size="28"
            required="true" />
        <field
            id="creationdate"
            name="creationdate"
            type="text"
            label="COM_THM_ORGANIZER_SCH_CREATION_DATE"
            description="COM_THM_ORGANIZER_SCH_CREATION_DATE_DESC"
            default=""/>
        <field
            id="description"
            name="description"
            type="text"
            label="COM_THM_ORGANIZER_DESC"
            description="COM_THM_ORGANIZER_SCH_DESC_DESC"
            class="inputbox"
            size="56"
            default=""/>
        <field
            id="sid"
            name="sid"
            type="sql"
            label="COM_THM_ORGANIZER_SCH_SEMESTER_TITLE"
            description="COM_THM_ORGANIZER_SCH_SEMESTER_DESC"
            query="SELECT id AS sid, CONCAT( organization, ' - ', semesterDesc ) AS semester FROM #__thm_organizer_semesters"
            key_field="sid"
            value_field="semester"/>
        <field
            id="startdate"
            name="startdate"
            type="calendar"
            label="COM_THM_ORGANIZER_START_DATE"
            description="COM_THM_ORGANIZER_SCH_START_DATE_DESC"
            class="inputbox validate-germandate"
            validate="germandate"
            required="true"
            format="%d.%m.%Y"
            size="7" />
        <field
            id="enddate"
            name="enddate"
            type="calendar"
            label="COM_THM_ORGANIZER_END_DATE"
            description="COM_THM_ORGANIZER_SCH_END_DATE_DESC"
            class="inputbox validate-germandate"
            validate="germandate"
            required="true"
            format="%d.%m.%Y"
            size="7" />
        <field
            id="plantypeID"
            name="plantypeID"
            type="text" />
    </fieldset>
</form>
