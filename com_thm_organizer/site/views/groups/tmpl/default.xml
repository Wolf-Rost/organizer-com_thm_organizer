	<layout title="COM_THM_ORGANIZER_GRP_LAYOUT_TITLE">
		<message>COM_THM_ORGANIZER_GRP_LAYOUT_DESCRIPTION</message>
	</layout>
	<fields name="params">
		<fieldset name="basic">
			<field name="lsf_query"
				   type="sql"
				   label="COM_THM_ORGANIZER_DEGREE_PROGRAM_TITLE"
				   description="COM_THM_ORGANIZER_DEGREE_PROGRAM_DESCRIPTION"
				   required="true"
				   query="SELECT majors.id AS value, CONCAT(degrees.name, ' ', majors.subject, ' (', majors.po, ')') AS lsf_query FROM #__thm_organizer_majors as majors INNER JOIN #__thm_organizer_degrees as degrees ON degrees.id = majors.degree_id " />
			<field name="lsf_default_language"
				   type="radio" default="0"
				   label="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_TITLE"
				   description="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_DESCRIPTION"
				   required="true">
				<option value="de">COM_THM_ORGANIZER_GERMAN</option>
				<option value="en">COM_THM_ORGANIZER_ENGLISH</option>
			</field>
			<field name="lsf_group"
				   type="radio"
				   default="0"
				   label="COM_THM_ORGANIZER_GRP_FILTER_TITLE"
				   description="COM_THM_ORGANIZER_GRP_FILTER_DESCRIPTION">
				<option value="1">JON</option>
				<option value="0">JOFF</option>
			</field>
			<field name="lsf_group_value"
				   type="text"
				   label="COM_THM_ORGANIZER_GRP_FILTER_VALUE_TITLE"
				   description="COM_THM_ORGANIZER_GRP_FILTER_VALUE_DESCRIPTION"
				   size="70" />
			<field name="lsf_navi"
				   type="radio"
				   default="0"
				   label="COM_THM_ORGANIZER_GRP_NAVIGATION_TITLE"
				   description="COM_THM_ORGANIZER_GRP_NAVIGATION_DESCRIPTION">
				<option value="1">JON</option>
				<option value="0">JOFF</option>
			</field>
			<field name="lsf_table_suffix"
				   type="text"
				   label="COM_THM_ORGANIZER_SUFFIX_TITLE"
				   description="COM_THM_ORGANIZER_SUFFIX_DESCRIPTION"
				   default="" />
		</fieldset>
	</fields>
</metadata>