<?xml version="1.0" encoding="UTF-8"?>
<metadata>
    <name>THM_ORGANIZER</name>
    <author>James Antrim</author>
    <creationDate>01.12.2014</creationDate>
    <copyright>TH Mittelhessen 2014</copyright>
    <licence>GNU GPL v.2</licence>
    <authorEMail>james.antrim@mni.thm.de</authorEMail>
    <authorUrl>www.mni.thm.de</authorUrl>
    <layout title="COM_THM_ORGANIZER_CURRICULUM_TITLE">
        <message>COM_THM_ORGANIZER_CURRICULUM_DESCRIPTION</message>
    </layout>
    <fields name="params" addfieldpath="/media/com_thm_organizer/fields">
        <fieldset name="basic">
            <field type="spacer"
                   label="COM_THM_ORGANIZER_CUR_BASIC_SETTINGS" />
            <field name="programID"
                   type="programID"
                   class="inputbox"
                   label="COM_THM_ORGANIZER_PROGRAM"
                   description="COM_THM_ORGANIZER_PROGRAM_DESC"
                   required="true"/>
            <field name="suffix"
                   type="text"
                   class="inputbox"
                   label="COM_THM_ORGANIZER_SUFFIX"
                   description="COM_THM_ORGANIZER_SUFFIX_DESC"
                   size="15" />
            <field name="itemWidth"
                   type="text"
                   class="inputbox"
                   required="true"
                   label="COM_THM_ORGANIZER_ITEM_PANEL_WIDTH"
                   description="COM_THM_ORGANIZER_ITEM_PANEL_WIDTH_DESC"
                   default="120" />
            <field name="itemHeight"
                   type="text"
                   class="inputbox"
                   required="true"
                   label="COM_THM_ORGANIZER_CUR_ITEM_PANEL_HEIGHT"
                   description="COM_THM_ORGANIZER_ITEM_PANEL_HEIGHT_DESC"
                   default="120" />
            <field name="maxItems"
                   type="text"
                   class="inputbox"
                   required="true"
                   label="COM_THM_ORGANIZER_MAX_ITEMS"
                   description="COM_THM_ORGANIZER_MAX_ITEMS_DESC"
                   size="2"
                   maxlength="1" />
            <field name="displayECollabLink"
                   type="list"
                   default="0"
                   class="chzn-color-state"
                   required="true"
                   label="COM_THM_ORGANIZER_DISPLAY_ECOLLAB"
                   description="COM_THM_ORGANIZER_DISPLAY_ECOLLAB_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</metadata>