    <authorUrl>www.mni.thm.de</authorUrl>
	<layout title="COM_THM_ORGANIZER_CUR_LAYOUT_TITLE">
		<message>COM_THM_ORGANIZER_CUR_LAYOUT_DESCRIPTION</message>
	</layout>
	<fields name="params">
		<fieldset name="basic">
			<field type="spacer"
				   label="COM_THM_ORGANIZER_CUR_BASIC_SETTINGS" />
			<field addfieldpath="/components/com_thm_organizer/models/fields"
				   name="major"
				   type="major"
				   label="COM_THM_ORGANIZER_DEGREE_PROGRAM_TITLE"
				   description="COM_THM_ORGANIZER_CUR_DEGREE_PROGRAM_DESCRIPTION"
				   query="SELECT majors.id AS value, CONCAT(degrees.name, ' ', majors.subject, ' (', majors.po, ')') AS major FROM #__thm_organizer_majors as majors INNER JOIN #__thm_organizer_degrees as degrees ON degrees.id = majors.degree_id " />
			<field addfieldpath="/components/com_thm_organizer/models/fields"
				   name="semesters"
				   type="semester"
				   label="COM_THM_ORGANIZER_CUR_TERM_TITLE"
				   description="COM_THM_ORGANIZER_CUR_TERM_DESCRIPTION" />
			<field name="lsf_default_language"
				   type="radio"
				   default="de"
				   required="true"
				   label="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_TITLE"
				   description="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_DESCRIPTION">
				<option value="de">COM_THM_ORGANIZER_GERMAN</option>
				<option value="en">COM_THM_ORGANIZER_ENGLISH</option>
			</field>
			<field type="spacer"
				   label="COM_THM_ORGANIZER_CUR_APPEARANCE_SPACER" />
			<field name="css_suffix"
				   type="text"
				   label="COM_THM_ORGANIZER_SUFFIX_TITLE"
				   description="COM_THM_ORGANIZER_SUFFIX_DESCRIPTION"
				   size="15" />
			<field name="width"
				   type="text"
				   label="COM_THM_ORGANIZER_CUR_WIDTH_TITLE"
				   description="COM_THM_ORGANIZER_CUR_WIDTH_DESCRIPTION"
				   default="700"
				   required="true"
				   size="5" />
			<field name="height"
				   type="text"
				   label="COM_THM_ORGANIZER_CUR_HEIGHT_TITLE"
				   description="COM_THM_ORGANIZER_CUR_HEIGHT_DESCRIPTION"
				   default="500"
				   required="true"
				   size="5" />
			<field name="semester_body_color"
				   id="semester_body_color"
				   addfieldpath="/administrator/components/com_thm_organizer/models/fields/"
				   type="colorPicker"
				   label="COM_THM_ORGANIZER_CUR_TERM_PANEL_COLOR_TITLE"
				   description="COM_THM_ORGANIZER_CUR_TERM_PANEL_COLOR_DESCRIPTION"
				   default="#666666"
				   required="true"
				   size="10" />
			<field name="course_width"
				   type="text"
				   required="true"
				   label="COM_THM_ORGANIZER_CUR_MODULE_PANEL_WIDTH_TITLE"
				   description="COM_THM_ORGANIZER_CUR_MODULE_PANEL_WIDTH_DESCRIPTION"
				   size="5"
				   default="90" />
			<field name="course_body_color"
				   id="course_body_color"
				   addfieldpath="/administrator/components/com_thm_organizer/models/fields/"
				   type="colorPicker"
				   label="COM_THM_ORGANIZER_CUR_MODULE_PANEL_COLOR_TITLE"
				   description="COM_THM_ORGANIZER_CUR_MODULE_PANEL_COLOR_DESCRIPTION"
				   default="#c7b9b9"
				   required="true"
				   size="10" />
			<field name="elective_pool_body_color"
				   id="elective_pool_body_color"
				   addfieldpath="/administrator/components/com_thm_organizer/models/fields/"
				   type="colorPicker"
				   label="COM_THM_ORGANIZER_CUR_ELECTIVE_PANEL_COLOR_TITLE"
				   description="COM_THM_ORGANIZER_CUR_ELECTIVE_PANEL_COLOR_DESCRIPTION"
				   default="#c7b9b9"
				   required="true"
				   size="10" />
			<field type="spacer"
				   label="COM_THM_ORGANIZER_CUR_BEHAVIOR" />
			<field name="title_cut_length_activate"
				   type="radio"
				   default="0"
				   label="COM_THM_ORGANIZER_CUR_TITLE_CUT_ACTIVATE_TITLE"
				   description="COM_THM_ORGANIZER_CUR_TITLE_CUT_ACTIVATE_DESCRIPTION">
				<option value="1">JON</option>
				<option value="0">JOFF</option>
			</field>
			<field name="title_cut_length"
				   type="text"
				   default="10"
				   label="COM_THM_ORGANIZER_CUR_TITLE_CUT_LENGTH_TITLE"
				   description="COM_THM_ORGANIZER_CUR_TITLE_CUT_LENGTH_DESCRIPTION"
				   size="5" />
			<field name="scheduler_link"
				   type="text"
				   label="COM_THM_ORGANIZER_CUR_SCHEDULER_ICON_TITLE"
				   description="COM_THM_ORGANIZER_CUR_SCHEDULER_ICON_DESCRIPTION"
				   size="50" />
			<field name="note_link"
				   type="text"
				   label="COM_THM_ORGANIZER_CUR_NOTE_ICON_TITLE"
				   description="COM_THM_ORGANIZER_CUR_NOTE_ICON_DESCRIPTION"
				   size="50" />
			<field name="asset_line_break"
				   type="text"
				   default="5"
				   required="true"
				   label="COM_THM_ORGANIZER_CUR_TERM_DISTANCE_TITLE"
				   description="COM_THM_ORGANIZER_CUR_TERM_DISTANCE_DESCRIPTION"
				   size="5" />
			<field name="elective_pool_window_line_break"
				   type="text"
				   default="5"
				   required="true"
				   label="COM_THM_ORGANIZER_CUR_ELECTIVE_DISTANCE_TITLE"
				   description="COM_THM_ORGANIZER_CUR_ELECTIVE_DISTANCE_DESCRIPTION"
				   size="5" />
			<field name="compulsory_pool_line_break"
				   type="text"
				   default="5"
				   required="true"
				   label="COM_THM_ORGANIZER_CUR_COMPULSORY_DISTANCE_TITLE"
				   description="COM_THM_ORGANIZER_CUR_COMPULSORY_DISTANCE_DESCRIPTION"
				   size="5" />
		</fieldset>
	</fields>
</metadata>