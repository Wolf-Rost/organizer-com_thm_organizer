<?xml version="1.0" encoding="UTF-8"?>
<metadata>
    <name>THM_ORGANIZER</name>
    <author>James Antrim</author>
    <creationDate>01.03.2013</creationDate>
    <copyright>TH Mittelhessen 2013</copyright>
    <licence>GNU GPL v.2</licence>
    <authorEMail>james.antrim@mni.thm.de</authorEMail>
    <authorUrl>www.mni.thm.de</authorUrl>
    <layout title="COM_THM_ORGANIZER_CUR_LAYOUT_TITLE">
        <message>COM_THM_ORGANIZER_CUR_LAYOUT_DESCRIPTION</message>
    </layout>
    <fields name="params" addfieldpath="/components/com_thm_organizer/models/fields">
        <fieldset name="basic">
            <field type="spacer"
                   label="COM_THM_ORGANIZER_CUR_BASIC_SETTINGS" />
            <field name="programID"
                   type="programs"
                   class="inputbox"
                   label="COM_THM_ORGANIZER_PROGRAM"
                   description="COM_THM_ORGANIZER_CUR_PROGRAMS_DESC"
                   required="true"/>
            <field name="language"
                   type="radio"
                   default="de"
                   required="true"
                   label="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_TITLE"
                   description="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_DESCRIPTION">
                <option value="de">COM_THM_ORGANIZER_GERMAN</option>
                <option value="en">COM_THM_ORGANIZER_ENGLISH</option>
            </field>
            <field type="spacer"
                   label="COM_THM_ORGANIZER_APPEARANCE_SPACER" />
            <field name="suffix"
                   type="text"
                   label="COM_THM_ORGANIZER_SUFFIX_TITLE"
                   description="COM_THM_ORGANIZER_SUFFIX_DESCRIPTION"
                   size="15" />
            <field name="width"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_WIDTH_TITLE"
                   description="COM_THM_ORGANIZER_CUR_WIDTH_DESCRIPTION"
                   default="692"
                   required="true"
                   size="5" />
            <field name="height"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_HEIGHT_TITLE"
                   description="COM_THM_ORGANIZER_CUR_HEIGHT_DESCRIPTION"
                   default="720"
                   required="true"
                   size="5" />
            <field name="horizontalPanelHeaderColor"
                    id="horizontalPanelHeaderColor"
                    type="color"
                    label="COM_THM_ORGANIZER_CUR_HORIZONTAL_PANEL_HEADER_COLOR_TITLE"
                    description="COM_THM_ORGANIZER_CUR_HORIZONTAL_PANEL_HEADER_COLOR_DESCRIPTION"
                    default="#FFFFFF"
                    required="true"
                    size="10" />
            <field name="horizontalPanelColor"
                    id="horizontalPanelColor"
                    type="color"
                    label="COM_THM_ORGANIZER_CUR_HORIZONTAL_PANEL_COLOR_TITLE"
                    description="COM_THM_ORGANIZER_CUR_HORIZONTAL_PANEL_COLOR_DESCRIPTION"
                    default="#666666"
                    required="true"
                    size="10" />
            <field name="inlinePanelColor"
                    id="inlinePanelColor"
                    type="color"
                    label="COM_THM_ORGANIZER_CUR_INLINE_PANEL_COLOR_TITLE"
                    description="COM_THM_ORGANIZER_CUR_INLINE_PANEL_COLOR_DESCRIPTION"
                    default="#FFFFFF"
                    required="true"
                    size="10" />
            <field name="modalPanelColor"
                   id="modalPanelColor"
                   type="color"
                   label="COM_THM_ORGANIZER_CUR_MODAL_PANEL_COLOR_TITLE"
                   description="COM_THM_ORGANIZER_CUR_MODAL_PANEL_COLOR_DESCRIPTION"
                   default="#FFFFFF"
                   required="true"
                   size="10" />
            <field name="itemWidth"
                   type="text"
                   required="true"
                   label="COM_THM_ORGANIZER_CUR_ITEM_PANEL_WIDTH_TITLE"
                   size="5"
                   default="90" />
            <field name="itemHeight"
                   type="text"
                   required="true"
                   label="COM_THM_ORGANIZER_CUR_ITEM_PANEL_HEIGHT_TITLE"
                   size="5"
                   default="90" />
            <field name="itemColor"
                   id="itemColor"
                   type="color"
                   label="COM_THM_ORGANIZER_CUR_ITEM_PANEL_COLOR_TITLE"
                   description="COM_THM_ORGANIZER_CUR_ITEM_PANEL_COLOR_DESCRIPTION"
                   required="true"
                   size="10" />
            <field type="spacer"
                   label="COM_THM_ORGANIZER_CUR_BEHAVIOR" />
            <field name="titleCut"
                   type="radio"
                   default="0"
                   label="COM_THM_ORGANIZER_CUR_TITLE_CUT_TITLE"
                   description="COM_THM_ORGANIZER_CUR_TITLE_CUT_DESCRIPTION">
                   <option value="1">JON</option>
                   <option value="0">JOFF</option>
            </field>
            <field name="titleLength"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_TITLE_LENGTH_TITLE"
                   description="COM_THM_ORGANIZER_CUR_TITLE_LENGTH_DESCRIPTION"
                   size="2"
                   maxlength="2" />
            <field name="maxItems"
                   type="text"
                   default="5"
                   required="true"
                   label="COM_THM_ORGANIZER_CUR_MAXITEMS_TITLE"
                   description="COM_THM_ORGANIZER_CUR_MAXITEMS_DESCRIPTION"
                   size="2"
                   maxlength="1" />
            <field name="spacing"
                   type="radio"
                   default="0"
                   label="COM_THM_ORGANIZER_CUR_SPACING_TITLE"
                   description="COM_THM_ORGANIZER_CUR_SPACING_DESCRIPTION">
                   <option value="0">COM_THM_ORGANIZER_CUR_DYNAMIC</option>
                   <option value="1">COM_THM_ORGANIZER_CUR_STATIC</option>
            </field>
            <field name="horizontalSpacing"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_HORIZONTAL_SPACING_TITLE"
                   description="COM_THM_ORGANIZER_CUR_HORIZONTAL_SPACING_DESCRIPTION"
                   size="2"
                   maxlength="2" />
            <field name="inlineSpacing"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_INLINE_SPACING_TITLE"
                   description="COM_THM_ORGANIZER_CUR_INLINE_SPACING_DESCRIPTION"
                   size="2"
                   maxlength="2" />
            <field name="modalSpacing"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_MODAL_SPACING_TITLE"
                   description="COM_THM_ORGANIZER_CUR_MODAL_SPACING_DESCRIPTION"
                   size="2"
                   maxlength="2" />
            <field type="spacer"
                   label="COM_THM_ORGANIZER_CUR_INTEGRATION" />
            <field name="schedulerLink"
                   type="text"
                   label="COM_THM_ORGANIZER_CUR_SCHEDULER_TITLE"
                   description="COM_THM_ORGANIZER_CUR_SCHEDULER_DESCRIPTION"
                   size="30" />
        </fieldset>
    </fields>
</metadata>