    <layout title="COM_THM_ORGANIZER_SUL_LAYOUT_TITLE">
        <message>COM_THM_ORGANIZER_SUL_LAYOUT_DESCRIPTION</message>
    </layout>
    <fields name="params">
        <fieldset name="basic">
            <field name="programID"
                   type="sql"
                   label="COM_THM_ORGANIZER_DEGREE_PROGRAM_TITLE"
                   description="COM_THM_ORGANIZER_DEGREE_PROGRAM_DESCRIPTION"
                   query="SELECT p.id AS value, CONCAT(subject, ' (', d.name, ', ', version, ')') AS programID FROM #__thm_organizer_programs AS p INNER JOIN #__thm_organizer_degrees AS d ON d.id = p.degreeID INNER JOIN #__thm_organizer_mappings AS m ON m.programID = p.id ORDER BY programID" />
            <field name="language"
                   type="radio"
                   default="1"
                   label="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_TITLE"
                   description="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_DESCRIPTION">
                <option value="1">COM_THM_ORGANIZER_GERMAN</option>
                <option value="0">COM_THM_ORGANIZER_ENGLISH</option>
            </field>
            <field name="groupBy"
                   type="list"
                   default="0"
                   label="COM_THM_ORGANIZER_SUL_GROUP_TITLE"
                   description="COM_THM_ORGANIZER_SUL_GROUP_DESCRIPTION">
                <option value="0">COM_THM_ORGANIZER_SUL_GROUP_NONE</option>
                <option value="1">COM_THM_ORGANIZER_SUL_GROUP_POOL</option>
                <option value="2">COM_THM_ORGANIZER_SUL_GROUP_TEACHER</option>
                <option value="3">COM_THM_ORGANIZER_SUL_GROUP_FIELD</option>
            </field>
            <field type="spacer"
                   label="COM_THM_ORGANIZER_APPEARANCE_SPACER" />
            <field name="suffix"
                   type="text"
                   label="COM_THM_ORGANIZER_SUFFIX_TITLE"
                   description="COM_THM_ORGANIZER_SUFFIX_DESCRIPTION"
                   default="">
            </field>
        </fieldset>
    </fields>
</metadata>
