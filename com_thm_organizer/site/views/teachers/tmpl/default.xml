	<layout title="COM_THM_ORGANIZER_TRG_LAYOUT_TITLE">
		<message>COM_THM_ORGANIZER_TRG_LAYOUT_DESCRIPTION</message>
	</layout>
	<fields name="params">
		<fieldset name="basic">
			<field type="spacer"
				   label="COM_THM_ORGANIZER_TRG_CONFIG_SPACER">
			</field>
			<field name="lsf_query"
				   type="sql"
				   label="COM_THM_ORGANIZER_DEGREE_PROGRAM_TITLE"
				   description="COM_THM_ORGANIZER_DEGREE_PROGRAM_DESCRIPTION"
				   query="SELECT id AS value, name AS lsf_query  FROM #__thm_lsf_configuration ORDER BY name ASC" />
			<field type="spacer"
				   label="COM_THM_ORGANIZER_TRG_MISC_SPACER">
			</field>
			<field name="lsf_update_db"
				   type="updatedb"
				   label="COM_THM_ORGANIZER_DB_UPDATE_TITLE"
				   description="COM_THM_ORGANIZER_DB_UPDATE_DESCRIPTION" />
			<field name="lsf_query_lang"
				   type="radio"
				   default="0"
				   label="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_TITLE"
				   description="COM_THM_ORGANIZER_DEFAULT_LANGUAGE_DESCRIPTION">
				<option value="1">COM_THM_ORGANIZER_GERMAN</option>
				<option value="0">COM_THM_ORGANIZER_ENGLISH</option>
			</field>
			<field type="spacer"
				   label="COM_THM_ORGANIZER_CUR_APPEARANCE_SPACER">
			</field>
			<field name="lsf_table_suffix"
				   type="text"
				   label="COM_THM_ORGANIZER_SUFFIX_TITLE"
				   description="COM_THM_ORGANIZER_SUFFIX_DESCRIPTION"
				   default="">
			</field>
		</fieldset>
	</fields>
