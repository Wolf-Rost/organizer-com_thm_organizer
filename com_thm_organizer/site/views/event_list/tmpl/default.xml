    <authorEMail>james.antrim@nm.thm.de</authorEMail>
    <authorUrl>www.thm.de</authorUrl>
    <layout title="COM_THM_ORGANIZER_EVENT_LIST_TITLE">
        <message>COM_THM_ORGANIZER_EVENT_LIST_DESCRIPTION</message>
    </layout>
    <fields name="params" addfieldpath="/media/com_thm_organizer/fields">
        <fieldset name="basic" label="COM_THM_ORGANIZER_EVENT_LIST_SETTINGS">
            <field name="rooms"
                   type="genericlist"
                   valueColumn="id"
                   textColumn="longname"
                   table="thm_organizer_rooms"
                   label="COM_THM_ORGANIZER_ROOMS"
                   description="COM_THM_ORGANIZER_REL_ROOMS_DESC"
                   multiple="true">
                <option value="">COM_THM_ORGANIZER_FILTER_ALL_ROOMS</option>
            </field>
            <field name="days"
                   type="list"
                   label="COM_THM_ORGANIZER_DAYS"
                   description="COM_THM_ORGANIZER_REL_DAYS_DESC"
                   multiple="true">
                <option value="">COM_THM_ORGANIZER_FILTER_ALL_DAYS</option>
                <option value="1">MONDAY</option>
                <option value="2">TUESDAY</option>
                <option value="3">WEDNESDAY</option>
                <option value="4">THURSDAY</option>
                <option value="5">FRIDAY</option>
                <option value="6">SATURDAY</option>
                <option value="0">SUNDAY</option>
            </field>
            <field name="startdate"
                   type="calendar"
                   label="COM_THM_ORGANIZER_START_DATE"
                   description="COM_THM_ORGANIZER_START_DATE_DESC"
                   format="%Y-%m-%d"/>
            <field name="enddate"
                   type="calendar"
                   label="COM_THM_ORGANIZER_END_DATE"
                   description="COM_THM_ORGANIZER_END_DATE_DESC"
                   format="%Y-%m-%d"/>
            <field name="show_org"
                   type="list"
                   class="chzn-color-state"
                   label="COM_THM_ORGANIZER_ORG_ENABLE"
                   description="COM_THM_ORGANIZER_ORG_ENABLE_DESC"
                   default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="show_rooms"
                   type="list"
                   class="chzn-color-state"
                   label="COM_THM_ORGANIZER_ROOMS_ENABLE"
                   description="COM_THM_ORGANIZER_ROOMS_ENABLE_DESC"
                   default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="show_names"
                   type="list"
                   class="chzn-color-state"
                   label="COM_THM_ORGANIZER_NAMES_ENABLE"
                   description="COM_THM_ORGANIZER_NAMES_ENABLE_DESC"
                   default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="show_comment"
                   type="list"
                   class="chzn-color-state"
                   label="COM_THM_ORGANIZER_COMMENT_ENABLE"
                   description="COM_THM_ORGANIZER_COMMENT_ENABLE_DESC"
                   default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</metadata>
