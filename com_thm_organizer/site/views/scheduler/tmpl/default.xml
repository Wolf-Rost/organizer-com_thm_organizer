    <layout title="COM_THM_ORGANIZER_SCHEDULE_TITLE">
        <message>COM_THM_ORGANIZER_SCHEDULE_DESCRIPTION</message>
    </layout>
    <fields name="params" addfieldpath="/components/com_thm_organizer/models/fields">
        <fieldset name="basic">
            <field     name="departmentSemesterSelection"
                    type="sql"
                    label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_SELECTION_TITLE"
                    description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_SELECTION_DESCRIPTION"
                    key_field="id"
                    value_field="name"
                    default=""
                    query="SELECT DISTINCT CONCAT(departmentname, ';', semestername, ';', startdate, ';', enddate) AS id, CONCAT(departmentname, ' - ', semestername, ' (', startdate, ' - ', enddate, ')') AS name FROM #__thm_organizer_schedules ORDER BY name ASC">
            </field>
            <field type="spacer"
                default="&lt;b&gt;COM_THM_ORGANIZER_RIA_SEMESTER_TREE&lt;/b&gt;&lt;hr/&gt;"></field>
            <field name="tree" type="scheduler"
                label=""
                description="" />
            <field name="id" type="hidden" description="Tooltip ;)" />
            <field name="publicDefaultID" type="hidden"
                description="Tooltip ;)" />
            <field name="displayRoomSchedule" type="list" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_ROOMSCHEDULE" default="1" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_ROOMSCHEDULE_DESC" class="chzn-color-state">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="displayTeacherSchedule" type="list" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_TEACHERSCHEDULE" default="1" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_TEACHERSCHEDULE_DESC" class="chzn-color-state">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
        <fieldset name="advanced">
            <field name="loadLessonsOnStartUp" type="radio" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_LOAD_ON_STARTUP_TITLE" default="1" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_LOAD_ON_STARTUP_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="displayModuleNumber" type="radio" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_MODULE_NUMBER_TITLE" default="1" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_MODULE_NUMBER_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="displayDaysInWeek" type="radio" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_DAYS_IN_WEEK_TITLE" default="0" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_DAYS_IN_WEEK_DESC">
                <option value="0">COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_DAYS_IN_WEEK_MO_SA</option>
                <option value="1">COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DISPLAY_DAYS_IN_WEEK_MO_FR</option>
            </field>
            <field name="deltaDisplayDays" default="14" class="required validate-numeric" type="text" label="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DELTA_DISPLAY_TITLE"
                size="5" description="COM_THM_ORGANIZER_SCHEDULER_OPTIONS_DELTA_DISPLAY_DESC" />
        </fieldset>
    </fields>
</metadata>
