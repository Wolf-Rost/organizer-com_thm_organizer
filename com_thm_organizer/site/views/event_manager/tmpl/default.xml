    <layout title="COM_THM_ORGANIZER_EVENT_MANAGER_TITLE">
        <message>COM_THM_ORGANIZER_EVENT_MANAGER_DESCRIPTION</message>
    </layout>
    <fields name="params"  addfieldpath="/libraries/thm_core/fields">
        <fieldset name="params" label="COM_THM_ORGANIZER_LIST_SETTINGS">
            <field
                name="display_type"
                type="list"
                default="0"
                label="COM_THM_ORGANIZER_EVENT_LIST_DISPLAY_TYPE"
                description="COM_THM_ORGANIZER_EVENT_LIST_DISPLAY_TYPE_DESC">
                <option value="0">COM_THM_ORGANIZER_ACTIVE_EVENTS</option>
                <option value="1">COM_THM_ORGANIZER_ACTIVE_EVENTS_BY_CATEGORY</option>
                <option value="2">COM_THM_ORGANIZER_ACTIVE_EVENTS_BY_GROUP</option>
                <option value="2">COM_THM_ORGANIZER_ACTIVE_EVENTS_BY_ROOM</option>
                <option value="3">COM_THM_ORGANIZER_ACTIVE_EVENTS_OWN</option>
                <option value="4">COM_THM_ORGANIZER_ALL_EVENTS</option>
                <option value="5">COM_THM_ORGANIZER_ALL_EVENTS_BY_CATEGORY</option>
                <option value="2">COM_THM_ORGANIZER_ALL_EVENTS_BY_GROUP</option>
                <option value="6">COM_THM_ORGANIZER_ALL_EVENTS_BY_ROOM</option>
                <option value="7">COM_THM_ORGANIZER_ALL_EVENTS_OWN</option>
           </field>
           <field
                name="category_restriction"
                type="genericlist"
                valueColumn="id"
                textColumn="title"
                table="categories"
                multiple="true"
                label="COM_THM_ORGANIZER_CATEGORIES"
                description="COM_THM_ORGANIZER_EVENT_MANAGER_CATEGORIES_DESC" />
            <field
                name="room_restriction"
                type="genericlist"
                valueColumn="id"
                textColumn="name"
                table="thm_organizer_rooms"
                multiple="true"
                label="COM_THM_ORGANIZER_ROOMS"
                description="COM_THM_ORGANIZER_EVENT_MANAGER_ROOMS_DESC" />
            <field
                name="group_restriction"
                type="genericlist"
                valueColumn="id"
                textColumn="title"
                table="usergroups"
                multiple="true"
                label="COM_THM_ORGANIZER_GROUPS"
                description="COM_THM_ORGANIZER_EVENT_MANAGER_GROUPS_DESC" />
        </fieldset>
    </fields>
</metadata>

