    <authorUrl>www.mni.thm.de</authorUrl>
    <fieldset name="details" addfieldpath="/libraries/thm_core/fields">
        <field
            name="scheduleID"
            type="genericlist"
            valueColumn="id"
            textColumn="departmentname,semestername"
            glue=" - "
            table="thm_organizer_schedules"
            where="active = '1'"
            class="inputbox" >
            <option value="">COM_THM_ORGANIZER_FILTER_SCHEDULE</option>
        </field>
        <field
            name="resourceType"
            type="list"
            class="inputbox" >
            <option value="1">COM_THM_ORGANIZER_FILTER_ROOMS</option>
            <option value="2">COM_THM_ORGANIZER_FILTER_TEACHERS</option>
        </field>
        <field
            name="reset"
            type="hidden"
            value="0" />
    </fieldset>
    <fieldset name="rooms" addfieldpath="/libraries/thm_core/fields">
    </fieldset>
    <fieldset name="teachers" addfieldpath="/libraries/thm_core/fields">
    </fieldset>
</form>
