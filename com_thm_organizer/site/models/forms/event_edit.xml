<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_THM_ORGANIZER_ATTRIBUTES_EVENT" addfieldpath="/libraries/thm_core/fields">
        <field
            id="id"
            name="id"
            type="hidden"
            default="0" />
        <field
            id="task"
            name="task"
            type="hidden"
            default="" />
        <field
            id="option"
            name="option"
            type="hidden"
            default="com_thm_organizer" />
        <field
            id="view"
            name="view"
            type="hidden"
            default="event_edit" />
        <field
            id="title"
            name="title"
            type="text"
            label="COM_THM_ORGANIZER_TITLE"
            description="COM_THM_ORGANIZER_TITLE_DESC"
            class="inputbox validate-title"
            required="true" />
        <field
            id="description"
            name="description"
            type="editor"
            label="COM_THM_ORGANIZER_DESC"
            description="COM_THM_ORGANIZER_DESC_EVENT_DESC" />
        <field
            name="recurrence_type"
            type="list"
            class="inputbox"
            label="COM_THM_ORGANIZER_RECURRENCE_TYPE"
            description="COM_THM_ORGANIZER_RECURRENCE_TYPE_DESC"
            default="0">
            <option value="0">COM_THM_ORGANIZER_BLOCK</option>
            <option value="1">COM_THM_ORGANIZER_DAILY</option>
        </field>
        <field
            id="startdate"
            name="startdate"
            type="calendar"
            label="COM_THM_ORGANIZER_START_DATE"
            description="COM_THM_ORGANIZER_EVENT_START_DATE_DESC"
            class="inputbox required validate-germandate"
            format="%d.%m.%Y"
            required="true"/>
        <field
            id="enddate"
            name="enddate"
            type="calendar"
            label="COM_THM_ORGANIZER_END_DATE"
            description="COM_THM_ORGANIZER_EVENT_END_DATE_DESC"
            class="inputbox validate-germandate"
            format="%d.%m.%Y" />
        <field
            id="starttime"
            name="starttime"
            type="time"
            label="COM_THM_ORGANIZER_START_TIME"
            description="COM_THM_ORGANIZER_EVENT_START_TIME_DESC"
            class="inputbox validate-time" />
        <field
            id="endtime"
            name="endtime"
            type="time"
            label="COM_THM_ORGANIZER_END_TIME"
            description="COM_THM_ORGANIZER_EVENT_END_TIME_DESC"
            class="inputbox validate-time" />
    </fieldset>
    <fieldset name="publishing" label="COM_THM_ORGANIZER_ATTRIBUTES_PUBLISHING" addfieldpath="/administrator/components/com_categories/models/fields">
        <field
            id="categoryID"
            name="categoryID"
            type="categoryedit"
            extension="com_content"
            label="JCATEGORY"
            description="JFIELD_CATEGORY_DESC"
            class="inputbox"
            required="true">
        </field>
        <field
            name="published"
            type="list"
            label="COM_THM_ORGANIZER_PUBLISHED"
            description="COM_THM_ORGANIZER_RECURRENCE_TYPE_DESC"
            default='0'
            filter="intval"
            class='chzn-color-state'>
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
        <field
            id="publish_up"
            name="publish_up"
            type="calendar"
            label="COM_THM_ORGANIZER_PUBLISH_START"
            description="COM_THM_ORGANIZER_PUBLISH_START_DESC"
            class="inputbox validate-germandate"
            format="%d.%m.%Y" />
        <field
            id="publish_down"
            name="publish_down"
            type="calendar"
            label="COM_THM_ORGANIZER_PUBLISH_END"
            description="COM_THM_ORGANIZER_PUBLISH_END_DESC"
            class="inputbox validate-germandate"
            format="%d.%m.%Y" />
        <field
            name="global"
            type="list"
            label="COM_THM_ORGANIZER_GLOBAL"
            description="COM_THM_ORGANIZER_GLOBAL_DESC"
            default='0'
            filter="intval"
            class='chzn-color-state'>
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
        <field
            name="reserves"
            type="list"
            label="COM_THM_ORGANIZER_RESERVES"
            description="COM_THM_ORGANIZER_RESERVES_DESC"
            default='0'
            filter="intval"
            class='chzn-color-state'>
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
    </fieldset>
    <fieldset name="resources" label="COM_THM_ORGANIZER_ATTRIBUTES_RESOURCES" addfieldpath="/libraries/thm_core/fields">
        <field
            id="teachers"
            name="teachers"
            type="genericlist"
            valueColumn="id"
            textColumn="surname,forename"
            glue=", "
            table="thm_organizer_teachers"
            label="COM_THM_ORGANIZER_TEACHERS"
            description="COM_THM_ORGANIZER_EVENT_TEACHERS_DESC">
            <option value="-1">JNONE</option>
        </field>
        <field
            id="rooms"
            name="rooms"
            type="genericlist"
            valueColumn="id"
            textColumn="longname"
            table="thm_organizer_rooms"
            label="COM_THM_ORGANIZER_ROOMS"
            description="COM_THM_ORGANIZER_EVENT_ROOMS_DESC">
            <option value="-1">JNONE</option>
        </field>
        <field
            id="groups"
            name="groups"
            type="genericlist"
            valueColumn="id"
            textColumn="title"
            table="usergroups"
            label="COM_THM_ORGANIZER_GROUPS"
            description="COM_THM_ORGANIZER_EVENT_GROUPS_DESC">
            <option value="-1">JNONE</option>
        </field>
        <field
            id="notify"
            name="notify"
            type="checkbox"
            label="COM_THM_ORGANIZER_NOTIFY"
            description="COM_THM_ORGANIZER_NOTIFY_DESC"
            default="0" />
    </fieldset>
</form>
