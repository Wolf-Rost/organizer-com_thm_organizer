<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="category_restriction"
            type="genericlist"
            valueColumn="cat.id"
            textColumn="cat.title"
            table="categories AS cat,thm_organizer_events AS e ON cat.id = e.categoryID"
            multiple="true"
            label="COM_THM_ORGANIZER_CATEGORIES"
            description="COM_THM_ORGANIZER_EVENT_MANAGER_CATEGORIES_DESC" >
            <option value="">COM_THM_ORGANIZER_FILTER_CATEGORY</option>
        </field>
        <field
            name="from_date"
            type="calendar"
            label="COM_THM_ORGANIZER_START_DATE"
            description="COM_THM_ORGANIZER_EVENT_START_DATE_DESC"
            format="%d.%m.%Y" />
        <field
            name="to_date"
            type="calendar"
            label="COM_THM_ORGANIZER_END_DATE"
            description="COM_THM_ORGANIZER_EVENT_END_DATE_DESC"
            format="%d.%m.%Y" />
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
