<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER" />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="title"
            type="genericlist"
            valueColumn="id"
            textColumn="title"
            table="thm_organizer_categories"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_NAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="global"
            type="list"
            label="COM_THM_ORGANIZER_GLOBAL"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_GLOBAL</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_GLOBAL_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_GLOBAL_NO</option>
        </field>
        <field
            name="reserves"
            type="list"
            label="COM_THM_ORGANIZER_RESERVES"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_RESERVES</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_RESERVES_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_RESERVES_NO</option>
        </field>
		<field
			name="ec.contentCatID"
            type="genericlist"
            valueColumn="c.id"
            textColumn="c.title"
            table="thm_organizer_categories AS e,categories AS c ON e.contentCatID = c.id"
			label="JOPTION_FILTER_CATEGORY"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
		</field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
