<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id"
               type="hidden" />
        <field name="subject_de"
               type="text"
               size="25"
               maxlength="255"
               class="inputbox"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_PRM_NAME_DE_DESC"
               required="true" />
        <field name="subject_en"
               type="text"
               size="25"
               maxlength="255"
               class="inputbox"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_PRM_NAME_EN_DESC"
               required="true" />
        <field name="description_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_PRM_DESCRIPTION_DE_DESC" />
        <field name="description_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_PRM_DESCRIPTION_EN_DESC" />
        <field name="degreeID"
               type="sql"
               label="COM_THM_ORGANIZER_PRM_DEGREE_TITLE"
               description="COM_THM_ORGANIZER_PRM_DEGREE_DESC"
               query="SELECT id AS value, name AS degreeID FROM #__thm_organizer_degrees ORDER BY name"
               required="true" />
        <field name="version"
               type="text"
               size="10"
               class="inputbox"
               label="COM_THM_ORGANIZER_PRM_VERSION_TITLE"
               description="COM_THM_ORGANIZER_PRM_VERSION_DESC"
               required="true" />
        <field name="fieldID"
               type="fields"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_PRM_FIELD_DESC"
               required="true" />
        <field name="lsfFieldID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_PRM_LSF_FIELDID_TITLE"
               description="COM_THM_ORGANIZER_PRM_LSF_FIELDID_DESC" />
    </fieldset>
</form>