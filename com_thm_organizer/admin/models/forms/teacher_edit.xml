<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field name="id"
			   type="hidden"
			   required="true" />
		<field name="surname"
			   type="text"
			   class="inputbox"
			   size="40"
			   label="COM_THM_ORGANIZER_TRM_SURNAME_TITLE"
			   description="COM_THM_ORGANIZER_TRM_SURNAME_DESC"
			   required="true" />
		<field name="forename"
			   type="text"
			   class="inputbox"
			   size="40"
			   label="COM_THM_ORGANIZER_TRM_FORENAME_TITLE"
			   description="COM_THM_ORGANIZER_TRM_FORENAME_DESC" />
		<field name="title"
			   type="text"
			   class="inputbox"
			   size="40"
			   label="COM_THM_ORGANIZER_TRM_TITLE_TITLE"
			   description="COM_THM_ORGANIZER_TRM_TITLE_DESC" />
		<field name="username"
			   type="text"
			   class="inputbox"
			   size="40"
			   label="COM_THM_ORGANIZER_TRM_USERNAME_TITLE"
			   description="COM_THM_ORGANIZER_TRM_USERNAME_DESC" />
		<field name="gpuntisID"
			   type="text"
			   class="inputbox"
			   size="40"
			   label="COM_THM_ORGANIZER_GPUNTISID"
			   description="COM_THM_ORGANIZER_TRM_GPUNTISID_DESC" />
		<field name="fieldID"
			   type="sql"
			   label="COM_THM_ORGANIZER_TRM_FIELD_TITLE"
			   description="COM_THM_ORGANIZER_TRM_FIELD_DESC"
			   query="SELECT id AS value, field AS fieldID FROM #__thm_organizer_fields" />
	</fieldset>
</form>
