<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="subject"
            type="localizedlist"
            valueColumn="subject"
            textColumn="subject"
            table="thm_organizer_programs"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_NAME</option>
            <option value="">JALL</option>
        </field>
        <field
            name="degreeID"
            type="genericlist"
            valueColumn="d.id"
            textColumn="d.abbreviation"
            table="thm_organizer_programs AS p,thm_organizer_degrees AS d ON p.degreeID = d.id"
            label="COM_THM_ORGANIZER_DEGREE"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_DEGREE</option>
            <option value="">JALL</option>
        </field>
        <field
            name="version"
            type="genericlist"
            valueColumn="version"
            textColumn="version"
            table="thm_organizer_programs"
            label="COM_THM_ORGANIZER_VERSION"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_VERSION</option>
            <option value="">JALL</option>
        </field>
		<field
			name="fieldID"
            type="genericlist"
            valueColumn="f.id"
            textColumn="f.field"
            table="thm_organizer_programs AS p,thm_organizer_fields AS f ON p.fieldID = f.id"
            label="COM_THM_ORGANIZER_FIELD"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_FIELD</option>
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
		</field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
