<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="name ASC">COM_THM_ORGANIZER_SORT_NAME_ASC</option>
            <option value="name DESC">COM_THM_ORGANIZER_SORT_NAME_DESC</option>
            <option value="abbreviation ASC">COM_THM_ORGANIZER_SORT_ABBREVIATION_ASC</option>
            <option value="abbreviation DESC">COM_THM_ORGANIZER_SORT_ABBREVIATION_DESC</option>
            <option value="lsfDegree ASC">COM_THM_ORGANIZER_SORT_LSFDEGREE_ASC</option>
            <option value="lsfDegree DESC">COM_THM_ORGANIZER_SORT_LSFDEGREE_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
