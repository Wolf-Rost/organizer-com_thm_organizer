<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_organizer/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            />
        <field
            name="checkbox"
            type="CheckAll" />
        <field
            name="name"
            type="genericlist"
            valueColumn="id"
            textColumn="name"
            table="thm_organizer_degrees"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
        <field
            name="abbreviation"
            type="genericlist"
            valueColumn="id"
            textColumn="abbreviation"
            table="thm_organizer_degrees"
            label="COM_THM_ORGANIZER_ABBREVIATION"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
        <field
            name="code"
            type="genericlist"
            valueColumn="id"
            textColumn="code"
            table="thm_organizer_degrees"
            label="COM_THM_ORGANIZER_DEGREE_CODE"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
