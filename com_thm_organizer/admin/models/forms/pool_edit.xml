<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id"
               type="hidden"
               required="true" />
        <field name="lsfID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_POM_LSFID_TITLE"
               description="COM_THM_ORGANIZER_POM_LSFID_DESC" />
        <field name="hisID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_POM_HISID_TITLE"
               description="COM_THM_ORGANIZER_POM_HISID_DESC" />
        <field name="externalID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_POM_EXTERNALID_TITLE"
               description="COM_THM_ORGANIZER_POM_EXTERNALID_DESC" />
        <field name="fieldID"
               type="sql"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_POM_FIELD_DESC"
               query="SELECT id AS value, field AS fieldID FROM #__thm_organizer_fields ORDER BY field"
               required="true" />
        <field name="minCrP"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_MINCRP_TITLE"
               description="COM_THM_ORGANIZER_POM_MINCRP_DESC"
               required="true"
               first="3"
               last="120"
               step="1"
               default="24"/>
        <field name="maxCrP"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_MAXCRP_TITLE"
               description="COM_THM_ORGANIZER_POM_MAXCRP_DESC"
               required="true"
               first="3"
               last="120"
               step="1"
               default="24"/>
        <field name="programID"
               type="poolPrograms"
               class="inputbox"
               label="COM_THM_ORGANIZER_PROGRAMS"
               description="COM_THM_ORGANIZER_POM_PROGRAMS_DESC"
               required="false"/>
        <field name="parentID"
               type="parentPool"
               class="inputbox"
               label="COM_THM_ORGANIZER_PARENTS"
               description="COM_THM_ORGANIZER_POM_PARENT_DESC"
               required="false" />
        <field name="name_de"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_POM_NAME_DE_DESC"
               required="true" />
        <field name="name_en"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_POM_NAME_EN_DESC"
               required="true" />
        <field name="short_name_de"
               type="text"
               class="inputbox"
               size="40" label="COM_THM_ORGANIZER_POM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_POM_SHORT_NAME_DE_DESC"
               required="true" />
        <field name="short_name_en"
               type="text"
               class="inputbox"
               size="40" label="COM_THM_ORGANIZER_POM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_POM_SHORT_NAME_EN_DESC"
               required="true" />
        <field name="abbreviation_de"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_POM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_POM_ABBREVIATION_DE_DESC"
               required="true" />
        <field name="abbreviation_en"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_POM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_POM_ABBREVIATION_EN_DESC"
               required="true" />
        <field name="description_de"
               type="textarea"
               class="inputbox"
               cols="30"
               row="3"
               label="COM_THM_ORGANIZER_DESC"
               description="COM_THM_ORGANIZER_POM_DISPLAY_DESCRIPTION_DE_DESC" />
        <field name="description_en"
               type="textarea"
               class="inputbox"
               cols="30"
               row="3"
               label="COM_THM_ORGANIZER_DESC"
               description="COM_THM_ORGANIZER_POM_DISPLAY_DESCRIPTION_EN_DESC" />
        <field name="distance"
               type="integer"
               class="inputbox"
               first="0"
               last="20"
               step="1"
               default="0"
               label="COM_THM_ORGANIZER_POM_DISPLAY_DISTANCE_TITLE"
               description="COM_THM_ORGANIZER_POM_DISPLAY_DISTANCE_DESC" />
        <field name="enable_desc"
               type="radio"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_ENABLE_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_POM_ENABLE_DESCRIPTION_DESC"
               default="0">
               <option value="1">JYES</option>
               <option value="0">JNO</option> 
        </field>
        <field name="display_type"
               type="radio"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_DISPLAY_TYPE_TITLE"
               description="COM_THM_ORGANIZER_POM_DISPLAY_TYPE_DESC"
               default="0">
               <option value="1">COM_THM_ORGANIZER_POM_DISPLAY_INLINE</option>
               <option value="0">COM_THM_ORGANIZER_POM_DISPLAY_POPUP</option> 
        </field>
    </fieldset>
</form>
