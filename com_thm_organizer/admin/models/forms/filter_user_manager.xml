<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="name"
            type="genericlist"
            valueColumn="u.name"
            textColumn="u.name"
            table="thm_organizer_users AS o,users AS u ON o.userID = u.id"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_NAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="username"
            type="genericlist"
            valueColumn="u.username"
            textColumn="u.username"
            table="thm_organizer_users AS o,users AS u ON o.userID = u.id"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_USERNAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="program_manager"
            type="list"
            label="COM_THM_ORGANIZER_PROGRAM_MANAGER"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER_NO</option>
        </field>
        <field
            name="planner"
            type="list"
            label="COM_THM_ORGANIZER_PLANNER"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_PLANNER</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_PLANNER_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_PLANNER_NO</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
