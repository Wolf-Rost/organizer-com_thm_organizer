<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="programmanager"
            type="list"
            label="COM_THM_ORGANIZER_PROGRAM_MANAGER"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_PROGRAM_MANAGER_NO</option>
        </field>
        <field
            name="planner"
            type="list"
            label="COM_THM_ORGANIZER_PLANNER"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_PLANNER</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_PLANNER_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_PLANNER_NO</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="name ASC">COM_THM_ORGANIZER_SORT_NAME_ASC</option>
            <option value="ectitle DESC">COM_THM_ORGANIZER_SORT_NAME_DESC</option>
            <option value="name ASC">COM_THM_ORGANIZER_SORT_USERNAME_ASC</option>
            <option value="ectitle DESC">COM_THM_ORGANIZER_SORT_USERNAME_DESC</option>
            <option value="global ASC">COM_THM_ORGANIZER_SORT_PROGRAM_MANAGER_ASC</option>
            <option value="global DESC">COM_THM_ORGANIZER_SORT_PROGRAM_MANAGER_DESC</option>
            <option value="reserves ASC">COM_THM_ORGANIZER_SORT_PLANNER_ASC</option>
            <option value="reserves DESC">COM_THM_ORGANIZER_SORT_PLANNER_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
