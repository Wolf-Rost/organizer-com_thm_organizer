<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            id="id"
            name="id"
            type="hidden" />
        <field
            id="roomID"
            name="roomID"
            type="sql"
            label="COM_THM_ORGANIZER_MON_ROOM"
            description="COM_THM_ORGANIZER_MON_ROOM_DESC"
            query="SELECT id, longname AS name FROM #__thm_organizer_rooms ORDER BY longname"
            key_field="id"
            value_field="name"/>
        <field
            id="ip"
            name="ip"
            type="text"
            label="COM_THM_ORGANIZER_MON_IP"
            description="COM_THM_ORGANIZER_MON_IP_DESC"
            class="inputbox validate-ip"
            required="true"
            size="14"
            maxlength="15"
            default=""/>
        <field
            type="radio"
            id="useDefaults"
            name="useDefaults"
            label="COM_THM_ORGANIZER_MON_USEDEFAULTS"
            description="COM_THM_ORGANIZER_MON_USEDEFAULTS_DESC"
            class="inputbox"
            default="1">
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
        <field
            type="list"
            id="display"
            name="display"
            label="COM_THM_ORGANIZER_MON_DISPLAY"
            description="COM_THM_ORGANIZER_MON_DISPLAY_DESC"
            class="inputbox">
            <option value='1'>COM_THM_ORGANIZER_MON_SCHEDULE</option>
            <option value='2'>COM_THM_ORGANIZER_MON_MIXED</option>
            <option value='3'>COM_THM_ORGANIZER_MON_CONTENT</option>
            <option value='4'>COM_THM_ORGANIZER_MON_EVENTS</option>
        </field>
        <field
            id="schedule_refresh"
            name="schedule_refresh"
            type="integer"
            label="COM_THM_ORGANIZER_MON_SCHEDULE_REFRESH"
            description="COM_THM_ORGANIZER_MON_SCHEDULE_REFRESH_DESC"
            first="10"
            last="990"
            step="10"
            default="60"/>
        <field
            id="content_refresh"
            name="content_refresh"
            type="integer"
            label="COM_THM_ORGANIZER_MON_CONTENT_REFRESH"
            description="COM_THM_ORGANIZER_MON_CONTENT_REFRESH_DESC"
            first="10"
            last="990"
            step="10"
            default="60"/>
        <field
            id="content"
            name="content"
            type="filelist"
            label="COM_THM_ORGANIZER_MON_CONTENT"
            description="COM_THM_ORGANIZER_MON_CONTENT_DESC"
            directory="images/thm_organizer/"
            exclude=""/>
    </fieldset>
</form>
