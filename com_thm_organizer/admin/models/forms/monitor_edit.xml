<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            id="id"
            name="id"
            type="hidden" />
        <field
            id="roomID"
            name="roomID"
            type="sql"
            label="COM_THM_ORGANIZER_MON_ROOM"
            description="COM_THM_ORGANIZER_MON_ROOM_DESC"
            query="SELECT id, longname AS name FROM #__thm_organizer_rooms ORDER BY longname"
            key_field="id"
            value_field="name"/>
        <field
            id="ip"
            name="ip"
            type="text"
            label="COM_THM_ORGANIZER_MON_IP"
            description="COM_THM_ORGANIZER_MON_IP_DESC"
            class="inputbox validate-ip"
            required="true"
            size="14"
            maxlength="15"
            default=""/>
        <field
            type="list"
            id="display"
            name="display"
            label="COM_THM_ORGANIZER_MON_DISPLAY"
            description="COM_THM_ORGANIZER_MON_DISPLAY_DESC"
            class="inputbox">
            <option value='1'>COM_THM_ORGANIZER_MON_SCHEDULE</option>
            <option value='2'>COM_THM_ORGANIZER_MON_MIXED</option>
            <option value='3'>COM_THM_ORGANIZER_MON_CONTENT</option>
            <option value='4'>COM_THM_ORGANIZER_MON_EVENTS</option>
        </field>
        <field
            id="interval"
            name="interval"
            type="integer"
            label="COM_THM_ORGANIZER_MON_INTERVAL"
            description="COM_THM_ORGANIZER_MON_INTERVAL_DESC"
            first="1"
            last="9"
            step="1"
            default="1"/>
        <field
            id="content"
            name="content"
            type="filelist"
            label="COM_THM_ORGANIZER_MON_CONTENT"
            description="COM_THM_ORGANIZER_MON_CONTENT_DESC"
            directory="images/thm_organizer/"
            exclude=""/>
    </fieldset>
</form>
