<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_organizer/fields">
        <field name="search"
               type="text"
               label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
               hint="JSEARCH_FILTER"/>
        <field name="checkbox"
               type="CheckAll"/>
        <field name="name"
               type="localizedlist"
               valueColumn="name"
               textColumn="name"
               table="thm_organizer_subjects"
               label="COM_THM_ORGANIZER_NAME"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="externalID"
               type="genericlist"
               valueColumn="externalID"
               textColumn="externalID"
               table="thm_organizer_subjects"
               label="COM_THM_ORGANIZER_SUBJECT"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list" addfieldpath="/media/com_thm_organizer/fields">
        <field name="programID"
               type="programID"
               label="COM_THM_ORGANIZER_PROGRAM"
               onchange="this.form.submit();">
            <option value="">COM_THM_ORGANIZER_FILTER_PROGRAM</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="poolID"
               type="poolID"
               label="COM_THM_ORGANIZER_POOL"
               onchange="this.form.submit();">
            <option value="">COM_THM_ORGANIZER_FILTER_POOL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               label="COM_CONTENT_LIST_LIMIT"
               onchange="this.form.submit();"/>
    </fields>
</form>
