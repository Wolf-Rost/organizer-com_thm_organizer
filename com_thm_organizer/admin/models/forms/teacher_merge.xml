<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/libraries/thm_core/fields">
        <field name="surname"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_SURNAME"
               description="COM_THM_ORGANIZER_SURNAME_DESC"
               required="true" />
        <field name="forename"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_FORENAME"
               description="COM_THM_ORGANIZER_FORENAME_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="username"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_USERNAME"
               description="COM_THM_ORGANIZER_USERNAME_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="gpuntisID"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_GPUNTISID"
               description="COM_THM_ORGANIZER_GPUNTISID_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="fieldID"
               type="mergeByID"
               textColumn="field"
               tables="thm_organizer_teachers AS t,thm_organizer_fields AS f ON t.fieldID = f.id"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_FIELD_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="id"
               type="mergeID"
               other="false" />
        <field name="otherIDs"
               type="mergeID"
               other="true" />
    </fieldset>
</form>
