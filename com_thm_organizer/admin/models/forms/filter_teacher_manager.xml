<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="surname"
            type="genericlist"
            valueColumn="surname"
            textColumn="surname"
            table="thm_organizer_teachers"
            label="COM_THM_ORGANIZER_SURNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_SURNAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="forename"
            type="genericlist"
            valueColumn="forename"
            textColumn="forename"
            table="thm_organizer_teachers"
            label="COM_THM_ORGANIZER_SURNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_FORENAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="username"
            type="genericlist"
            valueColumn="username"
            textColumn="username"
            table="thm_organizer_teachers"
            label="COM_THM_ORGANIZER_USERNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_USERNAME</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field
            name="t.gpuntisID"
            type="genericlist"
            valueColumn="gpuntisID"
            textColumn="gpuntisID"
            table="thm_organizer_teachers"
            label="COM_THM_ORGANIZER_USERNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_UNTISID</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field
            name="fieldID"
            type="genericlist"
            valueColumn="f.id"
            textColumn="f.field"
            table="thm_organizer_teachers AS t,thm_organizer_fields AS f ON t.fieldID = f.id"
            label="COM_THM_ORGANIZER_USERNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_FIELD</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
