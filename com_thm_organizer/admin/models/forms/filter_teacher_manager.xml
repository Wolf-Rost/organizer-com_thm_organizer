<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="t.surname ASC">COM_THM_ORGANIZER_SORT_SURNAME_ASC</option>
            <option value="t.surname DESC">COM_THM_ORGANIZER_SORT_SURNAME_DESC</option>
            <option value="t.forename ASC">COM_THM_ORGANIZER_SORT_FORENAME_ASC</option>
            <option value="t.forename DESC">COM_THM_ORGANIZER_SORT_FORENAME_DESC</option>
            <option value="t.username ASC">COM_THM_ORGANIZER_SORT_USERNAME_ASC</option>
            <option value="t.username DESC">COM_THM_ORGANIZER_SORT_USERNAME_DESC</option>
            <option value="t.gpuntisID ASC">COM_THM_ORGANIZER_SORT_GPUNTISID_ASC</option>
            <option value="t.gpuntisID DESC">COM_THM_ORGANIZER_SORT_GPUNTISID_DESC</option>
            <option value="f.field ASC">COM_THM_ORGANIZER_SORT_FIELD_ASC</option>
            <option value="f.field DESC">COM_THM_ORGANIZER_SORT_FIELD_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
