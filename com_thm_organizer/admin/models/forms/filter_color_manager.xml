<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            />
        <field
            name="checkbox"
            type="checkall" />
        <field
            name="name"
            type="genericlist"
            valueColumn="name"
            textColumn="name"
            table="thm_organizer_colors"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
        <field
            name="color"
            type="genericlist"
            valueColumn="color"
            textColumn="color"
            table="thm_organizer_colors"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
