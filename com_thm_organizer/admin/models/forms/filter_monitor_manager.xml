<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="roomID"
            type="rooms"
            label="COM_THM_ORGANIZER_ROOM"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_ROOM</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="displaybehaviour"
            type="list"
            label="COM_THM_ORGANIZER_DISPLAY_BEHAVIOUR"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_DISPLAY_BEHAVIOUR</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_DAILY_PLAN</option>
            <option value="2">COM_THM_ORGANIZER_MIXED_PLAN</option>
            <option value="3">COM_THM_ORGANIZER_CONTENT_DISPLAY</option>
            <option value="4">COM_THM_ORGANIZER_EVENT_PLAN</option>
        </field>
		<field
			name="displaycontent"
			type="displaycontent"
			label="COM_THM_ORGANIZER_DISPLAY_CONTENT"
			onchange="this.form.submit();"
			>
			<option value="">COM_THM_ORGANIZER_FILTER_DISPLAY_CONTENT</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
		</field>
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="r.longname ASC">COM_THM_ORGANIZER_SORT_ROOM_ASC</option>
            <option value="r.longname DESC">COM_THM_ORGANIZER_SORT_ROOM_DESC</option>
            <option value="m.ip ASC">COM_THM_ORGANIZER_SORT_IP_ASC</option>
            <option value="m.ip DESC">COM_THM_ORGANIZER_SORT_IP_DESC</option>
            <option value="m.useDefaults ASC">COM_THM_ORGANIZER_SORT_COMPONENT_SETTINGS_ASC</option>
            <option value="m.useDefaults DESC">COM_THM_ORGANIZER_SORT_COMPONENT_SETTINGS_DESC</option>
            <option value="m.content ASC">COM_THM_ORGANIZER_SORT_DISPLAY_CONTENT_ASC</option>
            <option value="m.content DESC">COM_THM_ORGANIZER_SORT_DISPLAY_CONTENT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
