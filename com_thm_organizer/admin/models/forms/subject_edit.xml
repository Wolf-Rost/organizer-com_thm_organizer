<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_THM_ORGANIZER_ATTRIBUTES_BASIC" addfieldpath="/libraries/thm_core/fields">
        <field name="id"
               type="hidden" />
        <field name="externalID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_EXTERNAL_ID"
               description="COM_THM_ORGANIZER_EXTERNAL_ID_DESC" />
        <field name="lsfID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_LSF_ID"
               description="COM_THM_ORGANIZER_LSF_ID_DESC" />
        <field name="frequencyID"
               type="list"
               label="COM_THM_ORGANIZER_AVAILABILITY"
               description="COM_THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">COM_THM_ORGANIZER_FILTER_AVAILABILITY</option>
            <option value="3">COM_THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">COM_THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">COM_THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">COM_THM_ORGANIZER_AVAILABILITY_WINTER</option>
            <option value="4">COM_THM_ORGANIZER_AVAILABILITY_AS_NEEDED</option>
            <option value="0">COM_THM_ORGANIZER_AVAILABILITY_APPT</option>
        </field>
        <field name="fieldID"
               type="genericlist"
               valueColumn="id"
               textColumn="field"
               table="thm_organizer_fields"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_FIELD_DESC" >
            <option value="">JNONE</option>
        </field>
    </fieldset>
    <fieldset name="de_texts" label="COM_THM_ORGANIZER_ATTRIBUTES_DE">
        <field name="name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_NAME_DE"
               description="COM_THM_ORGANIZER_NAME_DE_DESC"
               required="true" />
        <field name="short_name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SHORT_NAME_DE"
               description="COM_THM_ORGANIZER_SHORT_NAME_DE_DESC" />
        <field name="abbreviation_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_ABBREVIATION_DE"
               description="COM_THM_ORGANIZER_ABBREVIATION_DE_DESC" />
        <field name="method_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_METHOD_DE"
               description="COM_THM_ORGANIZER_METHOD_DE_DESC" />
        <field name="proof_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_PROOF_DE"
               description="COM_THM_ORGANIZER_PROOF_DE_DESC" />
        <field name="description_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_DESC_DE"
               description="COM_THM_ORGANIZER_DESC_DE_DESC" />
        <field name="objective_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_OBJECTIVE_DE"
               description="COM_THM_ORGANIZER_OBJECTIVE_DE_DESC" />
        <field name="content_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_CONTENT_DE"
               description="COM_THM_ORGANIZER_CONTENT_DE_DESC" />
        <field name="preliminary_work_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_PRELIMINARY_WORK_DE"
               description="COM_THM_ORGANIZER_PRELIMINARY_WORK_DE_DESC" />
        <field name="aids_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_AIDS_DE"
               description="COM_THM_ORGANIZER_AIDS_DE_DESC" />
        <field name="evaluation_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_EVALUATION_DE"
               description="COM_THM_ORGANIZER_EVALUATION_DE_DESC" />
    </fieldset>
    <fieldset name="en_texts" label="COM_THM_ORGANIZER_ATTRIBUTES_EN">
        <field name="name_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_NAME_EN"
               description="COM_THM_ORGANIZER_NAME_EN_DESC"
               required="true" />
        <field name="short_name_en"
               type="text"
               class="inputbox"
               size="70" label="COM_THM_ORGANIZER_SHORT_NAME_EN"
               description="COM_THM_ORGANIZER_SHORT_NAME_EN_DESC" />
        <field name="abbreviation_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_ABBREVIATION_EN"
               description="COM_THM_ORGANIZER_ABBREVIATION_DE_DESC"  />
        <field name="method_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_METHOD_EN"
               description="COM_THM_ORGANIZER_METHOD_EN_DESC" />
        <field name="proof_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_PROOF_EN"
               description="COM_THM_ORGANIZER_PROOF_EN_DESC" />
        <field name="description_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_DESC_EN"
               description="COM_THM_ORGANIZER_DESC_EN_DESC" />
        <field name="objective_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_OBJECTIVE_EN"
               description="COM_THM_ORGANIZER_OBJECTIVE_EN_DESC" />
        <field name="content_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_CONTENT_EN"
               description="COM_THM_ORGANIZER_CONTENT_EN_DESC" />
        <field name="preliminary_work_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_PRELIMINARY_WORK_EN"
               description="COM_THM_ORGANIZER_PRELIMINARY_WORK_EN_DESC" />
        <field name="aids_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_AIDS_EN"
               description="COM_THM_ORGANIZER_AIDS_EN_DESC" />
        <field name="evaluation_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_EVALUATION_EN"
               description="COM_THM_ORGANIZER_EVALUATION_EN_DESC" />
    </fieldset>
    <fieldset name="workload" label="COM_THM_ORGANIZER_WORKLOAD">
        <field name="creditpoints"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_CREDIT_POINTS"
               description="COM_THM_ORGANIZER_CREDIT_POINTS_DESC"
               first="1"
               last="30"
               step="1"
               default="6"/>
        <field name="sws"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SWS"
               description="COM_THM_ORGANIZER_SWS_DESC"
               first="1"
               last="30"
               step="1"
               default="6"/>
        <field name="expenditure"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_EXPENDITURE"
               description="COM_THM_ORGANIZER_EXPENDITURE_DESC"
               first="30"
               last="900"
               step="30"
               default="180"/>
        <field name="present"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_PRESENT"
               description="COM_THM_ORGANIZER_PRESENT_DESC"
               first="0"
               last="900"
               step="30"
               default="60"/>
        <field name="independent"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_INDEPENDENT"
               description="COM_THM_ORGANIZER_INDEPENDENT_DESC"
               first="0"
               last="900"
               step="30"
               default="120"/>
    </fieldset>
    <fieldset name="teachers" label="COM_THM_ORGANIZER_TEACHERS">
        <field name="responsible"
               type="subjectTeacher"
               responsibility="1"
               label="COM_THM_ORGANIZER_RESPONSIBLE_TEACHERS"
               description="COM_THM_ORGANIZER_RESPONSIBLE_TEACHERS_DESC" />
        <field name="teacherID"
               type="subjectTeacher"
               responsibility="2"
               label="COM_THM_ORGANIZER_TEACHERS"
               description="COM_THM_ORGANIZER_TEACHERS_DESC" />
    </fieldset>
    <fieldset name="competences" label="COM_THM_ORGANIZER_COMPETENCES">
        <field name="expertise"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_EXPERTISE"
               description="COM_THM_ORGANIZER_EXPERTISE_DESC"
               default="" >
            <option value=''>COM_THM_ORGANIZER_NO_STARS</option>
            <option value='0'>COM_THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>COM_THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>COM_THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>COM_THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="method_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_METHOD_COMPETENCE"
               description="COM_THM_ORGANIZER_METHOD_COMPETENCE_DESC"
               default="" >
            <option value=''>COM_THM_ORGANIZER_NO_STARS</option>
            <option value='0'>COM_THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>COM_THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>COM_THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>COM_THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="self_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SELF_COMPETENCE"
               description="COM_THM_ORGANIZER_SELF_COMPETENCE_DESC"
               default="" >
            <option value=''>COM_THM_ORGANIZER_NO_STARS</option>
            <option value='0'>COM_THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>COM_THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>COM_THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>COM_THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="social_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SOCIAL_COMPETENCE"
               description="COM_THM_ORGANIZER_SOCIAL_COMPETENCE_DESC"
               default="" >
            <option value=''>COM_THM_ORGANIZER_NO_STARS</option>
            <option value='0'>COM_THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>COM_THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>COM_THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>COM_THM_ORGANIZER_THREE_STARS</option>
        </field>
    </fieldset>
    <fieldset name="mappings"
              label="COM_THM_ORGANIZER_ATTRIBUTES_MAPPINGS"
              addfieldpath="/media/com_thm_organizer/fields"
              displayinitial="0">
        <field name="programID"
               type="programs"
               class="inputbox"
               label="COM_THM_ORGANIZER_PROGRAMS"
               description="COM_THM_ORGANIZER_PROGRAMS_DESC" />
        <field name="parentID"
               type="parentpool"
               class="inputbox"
               label="COM_THM_ORGANIZER_PARENT_POOLS"
               description="COM_THM_ORGANIZER_PARENT_POOLS_DESC" />
    </fieldset>
</form>
