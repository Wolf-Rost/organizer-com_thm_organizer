<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field name="id"
               type="hidden"
               required="true" />
		<field name="lsfID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_SUM_LSFID_TITLE"
               description="COM_THM_ORGANIZER_SUM_LSFID_DESC" />
		<field name="hisID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_SUM_HISID_TITLE"
               description="COM_THM_ORGANIZER_SUM_HISID_DESC" />
		<field name="externalID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_SUM_EXTERNALID_TITLE"
               description="COM_THM_ORGANIZER_SUM_EXTERNALID_DESC" />
		<field name="programID"
               type="subjectPrograms"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_PROGRAMS_TITLE"
               description="COM_THM_ORGANIZER_POM_PROGRAM_DESC"
               required="false"/> 
		<field name="parentID"
               type="subjectParents"
               class="inputbox"
               label="COM_THM_ORGANIZER_POM_PARENT_TITLE"
               description="COM_THM_ORGANIZER_POM_PARENT_DESC"
               required="false" /> 
		<field name="creditpoints"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_CREDITPOINTS_TITLE"
               description="COM_THM_ORGANIZER_SUM_CREDITPOINTS_DESC"
               required="true"
               first="1"
               last="30"
               step="1"
               default="6"/>
		<field name="expenditure"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_EXPENDITURE_TITLE"
               description="COM_THM_ORGANIZER_SUM_EXPENDITURE_DESC"
               required="true"
               first="30"
               last="900"
               step="30"
               default="180"/>
		<field name="present"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_PRESENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_PRESENT_DESC"
               required="true"
               first="30"
               last="900"
               step="30"
               default="60"/>
		<field name="independent"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_INDEPENDENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_INDEPENDENT_DESC"
               required="true"
               first="30"
               last="900"
               step="30"
               default="120"/>
        <field name="proof"
               type="list"
               default="s"
               label="COM_THM_ORGANIZER_SUM_PROOF_TITLE"
               description="COM_THM_ORGANIZER_SUM_PROOF_DESC">
            <option value="s">COM_THM_ORGANIZER_SUM_PROOF_WRITTEN</option>
            <option value="m">COM_THM_ORGANIZER_SUM_PROOF_ORAL</option>
            <option value="o">COM_THM_ORGANIZER_SUM_PROOF_ORALORWRITTEN</option>
            <option value="u">COM_THM_ORGANIZER_SUM_PROOF_ORALANDWRITTEN</option>
            <option value="e">COM_THM_ORGANIZER_SUM_PROOF_WRITTENORALEXCEPTION</option>
            <option value="l">COM_THM_ORGANIZER_SUM_PROOF_CERTIFICATE</option>
        </field>
        <field name="frequency"
               type="list"
               default="s"
               label="COM_THM_ORGANIZER_SUM_FREQUENCY_TITLE"
               description="COM_THM_ORGANIZER_SUM_FREQUENCY_DESC">
            <option value="0">COM_THM_ORGANIZER_SUM_FREQUENCY_SEMESTER</option>
            <option value="1">COM_THM_ORGANIZER_SUM_FREQUENCY_YEAR</option>
        </field>
        <field name="method"
               type="list"
               default="le"
               label="COM_THM_ORGANIZER_SUM_METHOD_TITLE"
               description="COM_THM_ORGANIZER_SUM_METHOD_DESC">
            <option value="l">COM_THM_ORGANIZER_SUM_METHOD_LECTURE</option>
            <option value="s">COM_THM_ORGANIZER_SUM_METHOD_SEMINAR</option>
            <option value="p">COM_THM_ORGANIZER_SUM_METHOD_PE</option>
            <option value="le">COM_THM_ORGANIZER_SUM_METHOD_LECTUREEXERCISE</option>
            <option value="lp">COM_THM_ORGANIZER_SUM_METHOD_LECTUREPE</option>
            <option value="se">COM_THM_ORGANIZER_SUM_METHOD_SEMINAREXERCISE</option>
            <option value="sp">COM_THM_ORGANIZER_SUM_METHOD_SEMINARPE</option>
        </field>
		<field name="fieldID"
               type="sql"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_SUM_FIELD_DESC"
               query="SELECT id AS value, field AS fieldID FROM #__thm_organizer_fields ORDER BY fieldID"
               required="true" />
		<field name="responsible"
               type="sql"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_RESPONSIBLE_TITLE"
               description="COM_THM_ORGANIZER_SUM_RESPONSIBLE_DESC"
               query="SELECT id AS value, CONCAT(surname, ', ', forename) AS responsible FROM #__thm_organizer_teachers ORDER BY surname"
               required="true" />
		<field name="teacherID"
               type="subjectTeachers"
               size="5"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_TEACHERS_TITLE"
               description="COM_THM_ORGANIZER_SUM_TEACHERS_DESC"
               multiple="multiple"
               required="true" />
		<field name="name_de"
               type="text"
               class="inputbox"
               size="80"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_SUM_NAME_DE_DESC"
               required="true" />
		<field name="name_en"
               type="text"
               class="inputbox"
               size="80"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_SUM_NAME_EN_DESC"
               required="true" />
		<field name="short_name_de"
               type="text"
               class="inputbox"
               size="40" label="COM_THM_ORGANIZER_SUM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_SUM_SHORT_NAME_DE_DESC"
               required="true" />
		<field name="short_name_en"
               type="text"
               class="inputbox"
               size="40" label="COM_THM_ORGANIZER_SUM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_SUM_SHORT_NAME_EN_DESC"
               required="true" />
		<field name="abbreviation_de"
               type="text"
               class="inputbox"
               size="20"
               label="COM_THM_ORGANIZER_SUM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_ABBREVIATION_DE_DESC"
               required="true" />
		<field name="abbreviation_en"
               type="text"
               class="inputbox"
               size="20"
               label="COM_THM_ORGANIZER_SUM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_ABBREVIATION_DE_DESC"
               required="true" />
		<field name="description_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_SUM_DESCRIPTION_DE_DESC" />
		<field name="description_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_SUM_DESCRIPTION_EN_DESC" />
		<field name="objective_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_OBJECTIVE_TITLE"
               description="COM_THM_ORGANIZER_SUM_OBJECTIVE_DE_DESC" />
		<field name="objective_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_OBJECTIVE_TITLE"
               description="COM_THM_ORGANIZER_SUM_OBJECTIVE_EN_DESC" />
		<field name="content_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_CONTENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_CONTENT_DE_DESC" />
		<field name="content_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_CONTENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_CONTENT_EN_DESC" />
		<field name="preliminary_work_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_TITLE"
               description="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_DE_DESC" />
		<field name="preliminary_work_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_TITLE"
               description="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_EN_DESC" />
	</fieldset>
</form>
