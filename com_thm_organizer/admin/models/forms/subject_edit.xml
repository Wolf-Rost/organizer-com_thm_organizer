<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_THM_ORGANIZER_ATTRIBUTES_BASIC" addfieldpath="/libraries/thm_core/fields">
        <field name="id"
               type="hidden"
               required="true" />
        <field name="lsfID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_LSF_ID"
               description="COM_THM_ORGANIZER_LSF_ID_DESC" />
        <field name="hisID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_HIS_ID"
               description="COM_THM_ORGANIZER_HIS_ID_DESC" />
        <field name="externalID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_EXTERNAL_ID"
               description="COM_THM_ORGANIZER_EXTERNAL_ID_DESC" />
        <field name="creditpoints"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_CREDIT_POINTS"
               description="COM_THM_ORGANIZER_CREDIT_POINTS_DESC"
               required="true"
               first="1"
               last="30"
               step="1"
               default="6"/>
        <field name="sws"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SWS"
               description="COM_THM_ORGANIZER_SWS_DESC"
               required="true"
               first="1"
               last="30"
               step="1"
               default="6"/>
        <field name="expenditure"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_EXPENDITURE"
               description="COM_THM_ORGANIZER_EXPENDITURE"
               required="true"
               first="30"
               last="900"
               step="30"
               default="180"/>
        <field name="present"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_PRESENT"
               description="COM_THM_ORGANIZER_PRESENT_DESC"
               required="true"
               first="0"
               last="900"
               step="30"
               default="60"/>
        <field name="independent"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_INDEPENDENT"
               description="COM_THM_ORGANIZER_INDEPENDENT_DESC"
               required="true"
               first="0"
               last="900"
               step="30"
               default="120"/>
        <field name="frequencyID"
               type="list"
               default="3"
               label="COM_THM_ORGANIZER_FREQUENCY"
               description="COM_THM_ORGANIZER_FREQUENCY_DESC">
            <option value="3">COM_THM_ORGANIZER_SUM_FREQUENCY_SEMESTER</option>
            <option value="5">COM_THM_ORGANIZER_SUM_FREQUENCY_YEAR</option>
            <option value="1">COM_THM_ORGANIZER_SUM_FREQUENCY_SUMMER</option>
            <option value="2">COM_THM_ORGANIZER_SUM_FREQUENCY_WINTER</option>
            <option value="4">COM_THM_ORGANIZER_SUM_FREQUENCY_ASNEEDED</option>
            <option value="0">COM_THM_ORGANIZER_SUM_FREQUENCY_APPT</option>
        </field>
        <field name="fieldID"
               type="genericlist"
               valueColumn="id"
               textColumn="field"
               table="thm_organizer_fields"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_FIELD_DESC" >
            <option value="">COM_THM_ORGANIZER_FILTER_FIELD</option>
            <option value="">COM_THM_ORGANIZER_NONE</option>
        </field>
        <field name="responsible"
               type="teacher"
               responsibility="responsible"
               label="COM_THM_ORGANIZER_RESPONSIBLE"
               description="COM_THM_ORGANIZER_SUM_RESPONSIBLE_DESC"
               required="true" />
        <field name="teacherID"
               type="teacher"
               responsibility="teacher"
               label="COM_THM_ORGANIZER_SUM_TEACHERS_TITLE"
               description="COM_THM_ORGANIZER_SUM_TEACHERS_DESC"
               required="true" />
        <field name="expertise"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_EXPERTISE_TITLE"
               description="COM_THM_ORGANIZER_EXPERTISE_DESC"
               default="0" >
            <option value='0'>JNONE</option>
            <option value='1'>COM_THM_ORGANIZER_SUM_ONESTAR</option>
            <option value='2'>COM_THM_ORGANIZER_SUM_TWOSTARS</option>
            <option value='3'>COM_THM_ORGANIZER_SUM_THREESTARS</option>
        </field>
        <field name="method_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_METHODCOMPETENCE_TITLE"
               description="COM_THM_ORGANIZER_METHODCOMPETENCE_DESC"
               default="0" >
            <option value='0'>JNONE</option>
            <option value='1'>COM_THM_ORGANIZER_SUM_ONESTAR</option>
            <option value='2'>COM_THM_ORGANIZER_SUM_TWOSTARS</option>
            <option value='3'>COM_THM_ORGANIZER_SUM_THREESTARS</option>
        </field>
        <field name="self_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_SELFCOMPETENCE_TITLE"
               description="COM_THM_ORGANIZER_SELFCOMPETENCE_DESC"
               default="0" >
            <option value='0'>JNONE</option>
            <option value='1'>COM_THM_ORGANIZER_SUM_ONESTAR</option>
            <option value='2'>COM_THM_ORGANIZER_SUM_TWOSTARS</option>
            <option value='3'>COM_THM_ORGANIZER_SUM_THREESTARS</option>
        </field>
        <field name="social_competence"
               type="list"
               class="inputbox"
               label="COM_THM_ORGANIZER_SUM_SOCIALCOMPETENCE_TITLE"
               description="COM_THM_ORGANIZER_SOCIALCOMPETENCE_DESC"
               default="0" >
            <option value='0'>JNONE</option>
            <option value='1'>COM_THM_ORGANIZER_SUM_ONESTAR</option>
            <option value='2'>COM_THM_ORGANIZER_SUM_TWOSTARS</option>
            <option value='3'>COM_THM_ORGANIZER_SUM_THREESTARS</option>
        </field>
    </fieldset>
    <fieldset name="de" label="COM_THM_ORGANIZER_ATTRIBUTES_DE">
        <field name="name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_SUM_NAME_DE_DESC"
               required="true" />
        <field name="short_name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_SUM_SHORTNAME_DE_DESC"
               required="true" />
        <field name="abbreviation_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_ABBREVIATION_DE_DESC"
               required="true" />
        <field name="method_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_METHOD_TITLE"
               description="COM_THM_ORGANIZER_SUM_METHOD_DE_DESC" />
        <field name="proof_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_PROOF_TITLE"
               description="COM_THM_ORGANIZER_SUM_PROOF_DE_DESC" />
        <field name="description_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_SUM_DESCRIPTION_DE_DESC" />
        <field name="objective_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_OBJECTIVE_TITLE"
               description="COM_THM_ORGANIZER_SUM_OBJECTIVE_DE_DESC" />
        <field name="content_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_CONTENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_CONTENT_DE_DESC" />
        <field name="preliminary_work_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_TITLE"
               description="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_DE_DESC" />
        <field name="aids_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_AIDS_TITLE"
               description="COM_THM_ORGANIZER_SUM_AIDS_DE_DESC" />
        <field name="evaluation_de"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_EVALUATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_EVALUATION_DE_DESC" />
    </fieldset>
    <fieldset name="en" label="COM_THM_ORGANIZER_ATTRIBUTES_EN">
        <field name="name_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_SUM_NAME_EN_DESC"
               required="true" />
        <field name="short_name_en"
               type="text"
               class="inputbox"
               size="70" label="COM_THM_ORGANIZER_SUM_SHORTNAME_TITLE"
               description="COM_THM_ORGANIZER_SUM_SHORTNAME_EN_DESC"
               required="true" />
        <field name="abbreviation_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_ABBREVIATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_ABBREVIATION_DE_DESC"
               required="true" />
        <field name="method_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_METHOD_TITLE"
               description="COM_THM_ORGANIZER_SUM_METHOD_EN_DESC" />
        <field name="proof_en"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SUM_PROOF_TITLE"
               description="COM_THM_ORGANIZER_SUM_PROOF_EN_DESC" />
        <field name="description_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_DESCRIPTION_TITLE"
               description="COM_THM_ORGANIZER_SUM_DESCRIPTION_EN_DESC" />
        <field name="objective_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_OBJECTIVE_TITLE"
               description="COM_THM_ORGANIZER_SUM_OBJECTIVE_EN_DESC" />
        <field name="content_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_CONTENT_TITLE"
               description="COM_THM_ORGANIZER_SUM_CONTENT_EN_DESC" />
        <field name="preliminary_work_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_TITLE"
               description="COM_THM_ORGANIZER_SUM_PRELIMINARYWORK_EN_DESC" />
        <field name="aids_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_AIDS_TITLE"
               description="COM_THM_ORGANIZER_SUM_AIDS_EN_DESC" />
        <field name="evaluation_en"
               type="textarea"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_SUM_EVALUATION_TITLE"
               description="COM_THM_ORGANIZER_SUM_EVALUATION_EN_DESC" />
    </fieldset>
    <fieldset name="mapping" label="COM_THM_ORGANIZER_ATTRIBUTES_MAPPINGS" addfieldpath="/media/com_thm_organizer/fields">
        <field name="programID"
               type="programs"
               class="inputbox"
               label="COM_THM_ORGANIZER_PROGRAMS"
               description="COM_THM_ORGANIZER_PROGRAMS_DESC"
               required="false"/>
        <field name="parentID"
               type="parentpool"
               class="inputbox"
               label="COM_THM_ORGANIZER_PARENT_POOLS"
               description="COM_THM_ORGANIZER_PARENT_POOLS_DESC"
               required="false" />
    </fieldset>
</form>
