<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="organization"
            type="sql"
            query='Select DISTINCT departmentname AS text, departmentname AS value FROM #__thm_organizer_schedules ORDER BY departmentname ASC'
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_ORGANIZATION</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="planningperiod"
            type="sql"
            query='Select DISTINCT semestername AS text, semestername AS value FROM #__thm_organizer_schedules ORDER BY semestername ASC'
            label="COM_THM_ORGANIZER_PLANNING_PERIOD"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_PLANNING_PERIOD</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
        </field>
        <field
            name="state"
            type="list"
            label="COM_THM_ORGANIZER_STATE"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_STATE</option>
            <option value="">COM_THM_ORGANIZER_FILTER_ALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_ACTIVE_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_ACTIVE_NO</option>
        </field>
    </fields>
    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_CONTENT_LIST_FULL_ORDERING"
            description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="a.id DESC"
            >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="departmentname ASC">COM_THM_ORGANIZER_SORT_DEPARTMENT_ASC</option>
            <option value="departmentname DESC">COM_THM_ORGANIZER_SORT_DEPARTMENT_DESC</option>
            <option value="semestername ASC">COM_THM_ORGANIZER_SORT_PLANNING_PERIOD_ASC</option>
            <option value="semestername DESC">COM_THM_ORGANIZER_SORT_PLANNING_PERIOD_DESC</option>
            <option value="active ASC">COM_THM_ORGANIZER_SORT_ACTIVE_ASC</option>
            <option value="active DESC">COM_THM_ORGANIZER_SORT_ACTIVE_DESC</option>
            <option value="creationdate ASC">COM_THM_ORGANIZER_SORT_CREATION_DATE_ASC</option>
            <option value="creationdate DESC">COM_THM_ORGANIZER_SORT_CREATION_DATE_DESC</option>
        </field>
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_CONTENT_LIST_LIMIT"
            description="COM_CONTENT_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
