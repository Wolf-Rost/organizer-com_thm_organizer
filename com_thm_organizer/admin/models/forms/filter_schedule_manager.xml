<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_organizer/fields">
        <field name="search"
               type="text"
               label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
               hint="JSEARCH_FILTER"/>
        <field name="checkbox"
               type="CheckAll"/>
        <field name="departmentID"
               type="departmentID"
               label="COM_THM_ORGANIZER_DEPARTMENT"
               description="COM_THM_ORGANIZER_DEPARTMENT_DESC">
            <option value="">JALL</option>
        </field>
        <field name="planningPeriodID"
               type="genericlist"
               valuecolumn="pp.id"
               textcolumn="pp.name"
               order="pp.startDate DESC"
               table="thm_organizer_schedules AS s,thm_organizer_planning_periods AS pp ON pp.id = s.planningPeriodID"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="active"
               type="list"
               label="COM_THM_ORGANIZER_STATE"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">COM_THM_ORGANIZER_FILTER_ACTIVE_YES</option>
            <option value="0">COM_THM_ORGANIZER_FILTER_ACTIVE_NO</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC"
               onchange="this.form.submit();"/>
    </fields>
</form>
