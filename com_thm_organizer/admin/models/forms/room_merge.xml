<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/libraries/thm_core/fields">
        <field name="name"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_NAME_DESC"
               required="true" />
        <field name="longname"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_DISPLAY_NAME"
               description="COM_THM_ORGANIZER_DISPLAY_NAME_DESC"
               required="true" />
        <field name="gpuntisID"
               type="mergeByValue"
               class="inputbox"
               label="COM_THM_ORGANIZER_GPUNTISID"
               description="COM_THM_ORGANIZER_GPUNTISID_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="typeID"
               type="mergeByID"
               textColumn="type,subtype"
               glue=", "
               tables="thm_organizer_rooms AS r,thm_organizer_room_types AS t ON t.id = r.typeID"
               class="inputbox"
               label="COM_THM_ORGANIZER_TYPE"
               description="COM_THM_ORGANIZER_TYPE_DESC" >
            <option value="">JNONE</option>
        </field>
        <field name="id"
               type="mergeID"
               other="false" />
        <field name="otherIDs"
               type="mergeID"
               other="true" />
    </fieldset>
</form>
