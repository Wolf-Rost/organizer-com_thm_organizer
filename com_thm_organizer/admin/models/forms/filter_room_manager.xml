<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="name"
            type="genericlist"
            valueColumn="id"
            textColumn="name"
            table="thm_organizer_rooms"
            label="COM_THM_ORGANIZER_ROOM"
            onchange="this.form.submit();"
