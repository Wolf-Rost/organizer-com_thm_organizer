<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="checkbox"
            type="CheckAll" />
        <field
            name="name"
            type="genericlist"
            valueColumn="name"
            textColumn="name"
            table="thm_organizer_rooms"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
        <field
            name="longname"
            type="genericlist"
            valueColumn="longname"
            textColumn="longname"
            table="thm_organizer_rooms"
            label="COM_THM_ORGANIZER_DISPLAY_NAME"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
        <field
            name="typeID"
            type="genericlist"
            valueColumn="t.id"
            textColumn="type"
            table="thm_organizer_rooms AS r,thm_organizer_room_types AS t ON r.typeID = t.id"
            label="COM_THM_ORGANIZER_TYPE"
            onchange="this.form.submit();"
            >
            <option value="">JALL</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
