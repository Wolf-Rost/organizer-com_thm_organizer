<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="gpuntisID"
			type="text"
			label="COM_THM_ORGANIZER_CL_GPUNTISID_LABEL"
			description="COM_THM_ORGANIZER_CL_GPUNTISID_DESC"
			class="inputbox validate-gpuntisid"
			validate="gpuntisid"
			required="true"
		/>
		<field
			name="name"
			type="text"
			label="COM_THM_ORGANIZER_CL_NAME_LABEL"
			description="COM_THM_ORGANIZER_CL_NAME_DESC"
			class="inputbox validate-name"
			validate="name"
			required="true"
		/>
		<field
			name="alias"
			type="text"
			label="COM_THM_ORGANIZER_CL_ALIAS_LABEL"
			description="COM_THM_ORGANIZER_CL_ALIAS_DESC"
			class="inputbox validate-alias"
			validate="alias"
			required="true"
		/>
		<field
			name="manager"
			type="sql"
			label="COM_THM_ORGANIZER_CL_MANAGER_LABEL"
			description="COM_THM_ORGANIZER_CL_MANAGER_DESC"
			class="inputbox"
			query="SELECT t.username AS value,
					t.name AS manager
					FROM #__thm_organizer_teachers AS t
					WHERE t.username != ''
					UNION
					SELECT '' AS value, '' AS manager
					ORDER BY manager"
		/>
		<field
			name="semester"
			type="text"
			label="COM_THM_ORGANIZER_CL_SEMESTER_LABEL"
			description="COM_THM_ORGANIZER_CL_SEMESTER_DESC"
			class="inputbox validate-semester"
			validate="semester"
			required="true"
		/>
		<field
			name="major"
			type="text"
			label="COM_THM_ORGANIZER_CL_MAJOR_LABEL"
			description="COM_THM_ORGANIZER_CL_MAJOR_DESC"
			class="inputbox validate-major"
			validate="major"
			required="true"
		/>
	</fieldset>
</form>